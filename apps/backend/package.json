{
  "name": "backend",
  "version": "1.0.0",
  "description": "CloudFi Labs Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
